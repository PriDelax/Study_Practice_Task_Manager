<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="600.0" maxWidth="800.0" minHeight="400.0" minWidth="600.0" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.taskmanager.TaskEditController">

    <Label fx:id="headerLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Новая задача" />

    <Label text="Название задачи:" />
    <TextField fx:id="nameField" promptText="Введите название" />

    <Label text="Описание (опционально):" />
    <TextArea fx:id="descriptionArea" prefRowCount="3" wrapText="true" />

    <Label text="Проект:" />
    <ComboBox fx:id="projectComboBox" promptText="Выберите проект" />

    <Label text="Приоритет:" />
    <HBox spacing="10.0">
        <RadioButton fx:id="lowRadio" text="НИЗКИЙ">
         <toggleGroup>
            <ToggleGroup fx:id="priorityGroup" />
         </toggleGroup></RadioButton>
        <RadioButton fx:id="mediumRadio" text="СРЕДНИЙ" toggleGroup="$priorityGroup" />
        <RadioButton fx:id="highRadio" text="ВЫСОКИЙ" toggleGroup="$priorityGroup" />
    </HBox>

    <Label text="Срок выполнения (опционально):" />
    <DatePicker fx:id="datePicker" />

    <Label text="Статус:" />
    <CheckBox fx:id="doneCheckBox" text="Завершена" />

    <HBox alignment="CENTER_RIGHT" spacing="15.0">
        <Button fx:id="deleteButton" onAction="#delete" text="Удалить" visible="false" />
        <Button onAction="#cancel" text="Отмена" />
        <Button defaultButton="true" onAction="#save" text="Сохранить" />
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
    </HBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
