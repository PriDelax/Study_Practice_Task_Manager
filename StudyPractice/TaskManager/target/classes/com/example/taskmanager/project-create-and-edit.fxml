<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="600.0" maxWidth="800.0" minWidth="600.0" spacing="15" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.taskmanager.ProjectEditController">

    <Label fx:id="headerLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Новый проект" />

    <Label text="Название проекта:" />
    <TextField fx:id="nameField" promptText="Введите название" />

    <Label text="Описание (опционально):" />
    <TextArea fx:id="descriptionArea" prefRowCount="3" promptText="Описание проекта" wrapText="true" />

    <Label text="Цвет проекта:" />
    <HBox spacing="10">
        <Button fx:id="color1" onAction="#colorSelect" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #3498db, #96bdd6); -fx-background-radius: 4;" userData="linear-gradient(from 0% 0% to 100% 100%, #3498db, #96bdd6);" />
        <Button fx:id="color2" onAction="#colorSelect" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #136b39, #27ae60); -fx-background-radius: 4;" userData="linear-gradient(from 0% 0% to 100% 100%, #136b39, #27ae60);" />
        <Button fx:id="color3" onAction="#colorSelect" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #730e03, #ff0000); -fx-background-radius: 4;" userData="linear-gradient(from 0% 0% to 100% 100%, #730e03, #ff0000);" />
        <Button fx:id="color4" onAction="#colorSelect" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #e8b96f, #f09d1a); -fx-background-radius: 4;" userData="linear-gradient(from 0% 0% to 100% 100%, #e8b96f, #f09d1a)" />
        <Button fx:id="color5" onAction="#colorSelect" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #1abc9c, #08fccc); -fx-background-radius: 4;" userData="linear-gradient(from 0% 0% to 100% 100%, #1abc9c, #08fccc)" />
        <Button fx:id="color6" onAction="#colorSelect" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #b09507, #ffd700); -fx-background-radius: 4;" userData="linear-gradient(from 0% 0% to 100% 100%, #b09507, #ffd700)" />
        <Button fx:id="color7" onAction="#colorSelect" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #8A2BE2, #DA70D6); -fx-background-radius: 4;" userData="linear-gradient(from 0% 0% to 100% 100%, #8A2BE2, #DA70D6);" />
    </HBox>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button onAction="#cancel" text="Отмена" />
        <Button defaultButton="true" onAction="#save" text="Сохранить" />
    </HBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
