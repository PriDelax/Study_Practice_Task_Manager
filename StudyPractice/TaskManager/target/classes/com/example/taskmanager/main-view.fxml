<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="1000.0" maxWidth="1500.0" minHeight="600.0" minWidth="800.0" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.taskmanager.MainController">
    <HBox spacing="10" styleClass="header">
        <Label styleClass="app-title" text="TaskFlow" />
        <Button onAction="#createProject" text="Новый проект" />
        <Button onAction="#createTask" text="Новая задача" />
        <Button onAction="#Settings" text="Настройки" />
        <Button onAction="#Statistics" text="Статистика" />
        <Button fx:id="themeToggle" onAction="#toggleTheme" text="Темная тема: ВЫКЛ" />
        <Button onAction="#close" text="Закрыть" />
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
    </HBox>

    <HBox VBox.vgrow="ALWAYS">
        <VBox minWidth="200" spacing="10.0" styleClass="sidebar">
            <Label styleClass="section-title" text="Проекты" />
            <ListView fx:id="projectListView" VBox.vgrow="ALWAYS" />
            <Button fx:id="showAllTasksButton" onAction="#showAllTasks" text="Все задачи" />
        </VBox>

        <VBox HBox.hgrow="ALWAYS">
            <Label fx:id="tasksNameLabel" styleClass="section-title" text="Задачи: Все проекты" />
            <TableView fx:id="taskTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="statusColumn" prefWidth="40" text="✅" />
                    <TableColumn fx:id="nameColumn" prefWidth="250" text="Название" />
                    <TableColumn fx:id="priorityColumn" prefWidth="100" text="Приоритет" />
                    <TableColumn fx:id="DateColumn" prefWidth="100" text="Срок" />
                    <TableColumn fx:id="projectColumn" prefWidth="200.0" text="Проект" />
                </columns>
            </TableView>
        </VBox>
    </HBox>

    <HBox spacing="10.0" styleClass="footer">
        <Label fx:id="statsLabel" text="Загрузка..." />
    </HBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
